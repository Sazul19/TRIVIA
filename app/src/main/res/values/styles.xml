<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/main_orange</item>
        <item name="colorPrimaryVariant">@color/normal_orange</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:fontFamily">@font/inter_light</item>

    </style>


        <style name="CalendarDateTextAppearance">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">@color/blue_black</item>
        </style>



    <!-- Background Style -->
    <style name="LoginBackground">
        <item name="android:background">@drawable/bg_1</item>
    </style>

    <!-- Input Field Style -->
    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:textColorHint">@color/hint_orange</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- Button Style -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Checkbox and Forgot Password -->
    <style name="CheckboxText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/ash_blue</item>
    </style>
    <style name="BottomNavigationIconSize">
        <item name="android:textSize">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
<!--     search bar-->

        <style name="SearchBarStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">55dp</item>
            <item name="android:background">@drawable/search_bar_bg</item>
            <item name="android:paddingStart">15dp</item>
            <item name="android:paddingEnd">15dp</item>
            <item name="android:textColor">@color/light_purple</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:gravity">center_vertical</item>
        </style>

    <style name="headerText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="labelText">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/blue_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="contentText">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/blue_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>


</resources>